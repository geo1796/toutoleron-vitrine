---
import "../assets/app.css";
import Footer from "../components/layout/Footer.astro";

interface Props {
    title?: string;
    description?: string;
    canonical?: string;
    lang?: string;
}

const {
    title = "Toutoléron",
    description = "Solutions informatiques pour professionnels de santé.",
    canonical,
    lang = "fr",
} = Astro.props as Props;
---
<!doctype html>
<html lang={lang} data-theme="light">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="generator" content={Astro.generator}/>

    <title>{title}</title>
    <meta name="description" content={description}/>
    {canonical &&
            <link rel="canonical" href={canonical}/>}

    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
</head>
<body class="flex flex-col min-h-dvh max-w-7xl mx-auto bg-white text-base-content">

<a href="#contenu" class="sr-only focus:not-sr-only focus:fixed focus:top-2 focus:left-2">
    Aller au contenu
</a>

<main id="contenu" class="flex flex-col flex-grow">
    <slot/>
</main>

<Footer/>

<script>
    if (typeof window !== "undefined") {
        // === REVEAL + STAGGER =======================================
        const revealObserver = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (!entry.isIntersecting) return;
                    const el = entry.target;
                    if (!(el instanceof HTMLElement)) return;

                    // Stagger optionnel par groupe
                    const group = el.closest("[data-anim-group]");
                    let index = 0;
                    if (group) {
                        const items = Array.from(
                            group.querySelectorAll('[data-anim="reveal"]')
                        );
                        index = items.indexOf(el);
                    }

                    const baseDelay = Number(el.dataset.animDelay || "0"); // ms
                    const stagger = Number(el.dataset.animStagger || "100"); // ms
                    const totalDelay = baseDelay + index * stagger;

                    setTimeout(() => {
                        el.classList.add("is-visible");
                    }, totalDelay);

                    // Une fois révélé, on n'observe plus
                    revealObserver.unobserve(el);
                });
            },
            {threshold: 0.15}
        );

        document
            .querySelectorAll('[data-anim="reveal"]')
            .forEach((el) => revealObserver.observe(el));
    }
</script>
</body>
</html>