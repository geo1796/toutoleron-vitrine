---
import "../assets/app.css";
import Footer from "../components/layout/Footer.astro";

interface Props {
    title?: string;
    description?: string;
    canonical?: string;
    lang?: string;
}

const {
    title = "Toutoléron",
    description = "Solutions informatiques pour professionnels de santé.",
    canonical,
    lang = "fr",
} = Astro.props as Props;
---
<!doctype html>
<html lang={lang} data-theme="light">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="generator" content={Astro.generator}/>

    <title>{title}</title>
    <meta name="description" content={description}/>
    {canonical &&
            <link rel="canonical" href={canonical}/>}

    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
</head>
<body class="flex flex-col min-h-dvh max-w-7xl mx-auto bg-white text-base-content">

<a href="#contenu" class="sr-only focus:not-sr-only focus:fixed focus:top-2 focus:left-2">
    Aller au contenu
</a>

<main id="contenu" class="flex flex-col flex-grow">
    <slot/>
</main>

<Footer/>
</body>
</html>