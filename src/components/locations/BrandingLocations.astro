---
import HeroDefault from "../../assets/photos/gettyimages-596435227-2048x2048.jpg";
import Illustration from "../../assets/illustrations/TOUTOLERON_illu_location_installation_maintenance.png";

interface Props {
  hero?: ImageMetadata;
  partners?: string[];
  titleLine1?: string;
  titleLine2?: string;
  paragraph?: string;
  highlight?: string;
}

const {
  hero = HeroDefault,
  partners = ["terra", "ASUS", "hp", "FUJITSU", "logitech"],
  titleLine1 = "Votre outil informatique doit vous",
  titleLine2 = "faire gagner du temps et être fiable.",
  paragraph = "Pannes et ralentissements fréquents, matériel obsolète, mise à jour au mauvais moment, maintenance logicielle, antivirus à configurer… L’informatique peut rapidement devenir une perte de temps et une source de stress.",
  highlight = "Avec l’offre Toutoléron, le matériel informatique est adapté, fiable et remplacé avant même de poser problème pour que chaque minute reste consacrée aux patients.",
} = Astro.props as Props;
---

<section id="branding-locations" class="py-6 sm:py-10">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <!-- Partners row -->
    <div class="hidden sm:flex items-center justify-start gap-8 text-base-content/70 mb-4">
      {partners.map((p) => (
        <span class="uppercase tracking-wide text-lg sm:text-xl md:text-2xl font-semibold">{p}</span>
      ))}
    </div>

    <!-- Hero image -->
    <div class="rounded-2xl overflow-hidden">
      <img src={hero.src} alt="Matériel informatique en cabinet" class="w-full h-[220px] sm:h-[360px] lg:h-[420px] object-cover" />
    </div>
  </div>

  <!-- Text + Illustration block -->
  <div class="mx-auto max-w-7xl px-6 lg:px-8 mt-12 lg:mt-16 grid lg:grid-cols-2 gap-8 lg:gap-16 items-center">
    <div>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl leading-tight">
        {titleLine1}
        <span class="block font-semibold">{titleLine2}</span>
      </h2>

      <p class="mt-6 text-base-content/80 max-w-2xl">{paragraph}</p>

      <p class="mt-6 font-semibold max-w-2xl">{highlight}</p>
    </div>

    <div class="justify-self-end w-full">
      <div class="bg-base-200 rounded-2xl p-6 sm:p-8 flex items-center justify-center">
        <img src={Illustration.src} alt="Illustration maintenance" class="w-full max-w-md h-auto" />
      </div>
    </div>
  </div>
</section>
