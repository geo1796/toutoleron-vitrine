---
import Img1 from "../../assets/photos/gettyimages-1343480454-2048x2048.jpg";
import Img2 from "../../assets/photos/gettyimages-2185766498-2048x2048.jpg";
import Img3 from "../../assets/photos/gettyimages-2174336126-2048x2048.jpg";

interface WhyItem {
    img: ImageMetadata;
    title: string;
    desc: string;
}

const items: WhyItem[] = [
    {
        img: Img1,
        title: "Se libérer de la contrainte informatique :",
        desc:
            "Une solution ajustée à la réalité du soin. Toutoléron, un partenaire e‑santé qui soulage du stress informatique.",
    },
    {
        img: Img2,
        title: "Sécuriser sa pratique médicale :",
        desc:
            "Des résultats concrets au quotidien avec moins de pannes, moins de charge mentale et plus de temps patient. Votre environnement informatique reste fiable et vos données protégées.",
    },
    {
        img: Img3,
        title: "Optimiser son cabinet pour mieux soigner :",
        desc:
            "Avec un écosystème numérique performant et toujours à jour, votre pratique médicale gagne en sérénité, fluidité et efficacité pour garantir le meilleur soin.",
    },
];
---

<section id="why-locations">
    <div class="px-6 lg:px-16 grid lg:grid-cols-2 gap-8 items-start">
        <!-- Left column: heading + CTA -->
        <div class="flex flex-col justify-center">
            <h2 class="text-3xl sm:text-4xl lg:text-5xl leading-tight">
                Pourquoi louer
                <span class="block"><span class="font-semibold">avec Toutoléron ?</span></span>
            </h2>

            <div class="mt-8">
                <a
                        target="_blank"
                        href="https://outlook.office.com/book/test@toutoleron.com/?ismsaljsauthenabled"
                        class="btn btn-primary rounded-full p-6 text-xl text-accent shadow-none border-0"
                >
                    Je prends rendez-vous
                </a>
            </div>
        </div>

        <!-- Right column: 3 media rows -->
        <div class="space-y-1">
            {items.map((it, index) => (
                    <div class="grid grid-cols-1 sm:grid-cols-[220px_1fr] items-center gap-5">
                        <img src={it.img.src} alt="Illustration"
                             class="w-full h-48 sm:h-40 object-cover rounded-xl"/>
                        <div>
                            <h3 class="text-xl font-semibold">{it.title}</h3>
                            <p class="mt-2 text-base-content/80">{it.desc}</p>
                        </div>
                    </div>
                    <div class="divider divider-primary"/>
            ))}
        </div>
    </div>
</section>
