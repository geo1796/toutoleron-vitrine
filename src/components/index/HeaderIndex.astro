---
import BackgroundPhotoUrl from "../../assets/photos/Header.jpg?url";
import BackgroundPhoto from "../../assets/photos/Header.jpg";
import EmojiStar from "../../assets/emojis/emoji-star.png";
import EmojiBrain from "../../assets/emojis/emoji-brain.png";
import EmojiPeople from "../../assets/emojis/emoji-people.png";
import NavBar from "../NavBar.astro";
---

<section id="header-index" class="relative overflow-hidden">

    <div class="hidden xl:block bg-center bg-cover bg-no-repeat"
         style={`background-image: url(${BackgroundPhotoUrl})`}>

        <NavBar/>

        <div class="px-6 lg:px-16 py-10 lg:py-16 grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
            <!-- Left: text content -->
            <div class="order-2 lg:order-1">
                <h1 class="text-4xl sm:text-5xl lg:text-6xl leading-[1.05] whitespace-pre-line">
                    Simplifier <span class="font-bold">l'écosystème numérique des soignants.</span>
                </h1>
                <p class="mt-6 text-xl whitespace-pre-line max-w-prose">
                    Expert en informatique de santé, Toutoléron
                    soutient les soignants avec des solutions fiables et
                    efficaces pour gagner en sérénité, libérer du temps
                    patient et améliorer le quotidien médical.
                </p>

                <!-- Actions -->
                <div class="mt-8">
                    <a href="/locations" class="btn btn-primary rounded-full p-6 text-xl text-primary-content shadow-none border-0">Ça
                        m’intéresse</a>
                </div>
            </div>
        </div>
    </div>

    <div class="xl:hidden p-2">
        <NavBar/>

        <div class="card lg:card-side">
            <div class="card-body">
                <div class="flex flex-col">
                    <!-- Left: text content -->
                    <h1 class="text-3xl leading-[1.05] whitespace-pre-line">
                        Simplifier <span class="font-bold">l'écosystème numérique des soignants.</span>
                    </h1>
                    <p class="mt-6 text-lg whitespace-pre-line max-w-prose">
                        Expert en informatique de santé, Toutoléron soutient les soignants avec des solutions fiables et
                        efficaces pour gagner en sérénité, libérer du temps patient et améliorer le quotidien médical.
                    </p>

                    <!-- Actions -->
                    <div class="mt-8">
                        <a href="/locations" class="btn btn-primary rounded-full text-xl p-6 text-primary-content shadow-none border-0">Ça
                            m’intéresse</a>
                    </div>
                </div>
            </div>
            <figure>
                <img
                        src={BackgroundPhoto.src}
                        class="object-[80%]"
                        alt="Movie"/>
            </figure>
        </div>
    </div>

    <!-- Bottom info strip -->
    <div class="bg-secondary border-t border-accent/10">
        <div class="px-6 lg:px-8">
            <ul class="flex flex-col justify-center sm:flex-row divide-y sm:divide-y-0 sm:divide-x divide-accent/20">
                <li class="flex items-center gap-3 py-4 sm:py-5 sm:px-6">
                    <img src={EmojiStar.src} alt="" class="h-5 w-5"/>
                    <span class="text-lg"><strong>4,8/5</strong> satisfaction client</span>
                </li>
                <li class="flex items-center gap-3 py-4 sm:py-5 sm:px-6">
                    <img src={EmojiBrain.src} alt="" class="h-5 w-5"/>
                    <span class="text-lg">Expert de référence <strong>WEDA</strong></span>
                </li>
                <li class="flex items-center gap-3 py-4 sm:py-5 sm:px-6">
                    <img src={EmojiPeople.src} alt="" class="h-5 w-5"/>
                    <span class="text-lg"><strong>+3000</strong> professionnels accompagnés</span>
                </li>
            </ul>
        </div>
    </div>

</section>

