---
import Getty1 from "../assets/photos/gettyimages-108112936-2048x2048.jpg";
import Getty2 from "../assets/photos/gettyimages-596435227-2048x2048.jpg";
import Getty3 from "../assets/photos/gettyimages-602981371-2048x2048.jpg";
import Getty4 from "../assets/photos/gettyimages-1405683451-2048x2048.jpg";
import Logo from "../assets/logos/TOUTOLERON_Embleme_blanc.svg";
import Marquee from "./Marquee.astro";

interface Props {
    title?: string,
    description?: string,
    bannerQuote?: string,
    bannerSubtitle?: string,
    footerTitle?: string,
    footerDescription?: string,
}

const {
    title = "Tout pour libérer ce que la médecine a\n" +
        "de plus humain.",
    description = "La digitalisation de la santé et les nouvelles réglementations apportent de nouveaux défis\n" +
        "aux soignants, souvent vécus comme complexes et contraignants. Chez Toutoléron, nous les aidons à adopter ces\n" +
        "changements sereinement et à simplifier leur quotidien numérique pour préserver la relation soignant-patient.",
    bannerQuote = "« 75 % des médecins\n" +
        "craignent une\n" +
        "déshumanisation de la\n" +
        "médecine dans le futur* »",
    bannerSubtitle = "Avec Toutoléron, les solutions numériques et\n" +
        "services associés d’e-santé sont pensés pour\n" +
        "réduire la charge mentale, améliorer les conditions\n" +
        "d’exercice et renforcer le lien soignant-patient.",
} = Astro.props as Props;
---

<!-- Branding section -->
<section>
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <!-- Title & intro -->
        <div class="max-w-3xl p-16 mx-auto text-center">
            <h2 class="text-4xl md:text-6xl font-semibold leading-tight whitespace-pre-line">{title}</h2>
            <p class="mt-5 text-base md:text-xl text-base-content/70">{description}</p>
        </div>

        <div class="flex overflow-hidden my-4 items-center rounded-2xl bg-primary bg-center bg-cover bg-no-repeat">

            <!-- Quote banner with collage -->
            <div class="grid md:grid-cols-2 gap-6 lg:gap-10 items-stretch h-[600px]">

                <!-- Left card with quote -->
                <div class="relative rounded-2xl p-6 sm:p-8 h-[600px]">

                    <img src={Logo.src} alt="" class="w-full h-auto opacity-25"/>

                    <div class="md:absolute md:inset-0 md:px-16 flex flex-col justify-evenly items-center z-10">
                        <h3 class="text-3xl font-semibold">
                            {bannerQuote}
                        </h3>
                        <p class="mt-4 text-lg font-semibold text-base-content/80 md:whitespace-pre-line">{bannerSubtitle}</p>
                        <p class="mt-4 text-lg text-base-content/60">*Étude Doctolib 2022, panel de 640 praticiens</p>
                    </div>

                </div>

                <!-- Right collage -->
                <div class="hidden overflow-hidden md:grid grid-cols-2 gap-4 pr-4">
                    <Marquee axis="y" speed="18s" class="bg-primary">
                        <img src={Getty1.src} alt=""
                             class="block h-[380px] w-full object-cover rounded-2xl"/>
                        <div class="h-[20px]"></div>
                        <img src={Getty2.src} alt=""
                             class="block h-[180px] w-full object-cover rounded-2xl"/>
                        <div class="h-[20px]"></div>
                    </Marquee>
                    <Marquee axis="y" speed="18s" class="bg-primary transform rotate-x-180">
                        <img src={Getty3.src} alt=""
                             class="block h-[180px] w-full object-cover rounded-2xl transform rotate-x-180"/>
                        <div class="h-[20px]"></div>
                        <img src={Getty4.src} alt=""
                             class="block h-[380px] w-full object-cover object-[80%_center] rounded-2xl transform rotate-x-180"/>
                        <div class="h-[20px]"></div>
                    </Marquee>
                </div>
            </div>
        </div>
    </div>
</section>